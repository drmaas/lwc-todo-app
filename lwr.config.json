{
    "lwc": { 
        "modules": [
            { 
                "dir": "$rootDir/src/modules" 
            },
            {
                "npm": "lwc-recipes-oss-ui-components"
            }
        ] 
    },
    "bundleConfig": { "exclude": ["lwc"] },
    "routes": [
        {
            "id": "todo",
            "path": "/",
            "rootComponent": "todo/app"
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "alias": "favicon",
            "file": "$rootDir/src/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ]
}
